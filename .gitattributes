# Auto detect text files and perform LF normalization
* text=auto

# Python files should use LF
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Bash scripts should use LF
*.sh text eol=lf

# Windows batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf 